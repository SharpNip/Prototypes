<Window x:Class="SeatingReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="Reminder Interval Timer" Height="300" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Background="Black" Height="50" Foreground="Green" TextAlignment="Center" Text="{Binding Hours}"/>
            <TextBlock Grid.Column="1" Height="50" Foreground="Black" TextAlignment="Center" Text=":"/>
            <TextBlock Grid.Column="2" Background="Black" Height="50" Foreground="Green" TextAlignment="Center" Text="{Binding Minutes}"/>
            <TextBlock Grid.Column="3" Height="50" Foreground="Black" TextAlignment="Center" Text=":"/>
            <TextBlock Grid.Column="4" Background="Black" Height="50" Foreground="Green" TextAlignment="Center" Text="{Binding Seconds}"/>
        </Grid>
        
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="mStartBtn" Command="{Binding OnButtonClicked}" CommandParameter="Start" Content="Start" Height="20" Margin="10 0" />
            <Button x:Name="mPauseBtn" Command="{Binding OnButtonClicked}" CommandParameter="Pause" Content="Pause" Height="20" Margin="10 0" />
            <Button x:Name="mResetBtn" Command="{Binding OnButtonClicked}" CommandParameter="Reset" Content="Reset" Height="20" Margin="10 0" />
        </StackPanel>


    </Grid>
</Window>
